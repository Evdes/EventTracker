@model IEnumerable<Event>
@{
    ViewBag.Title = "Upcoming events";
}

<div class="col">
    @foreach(var e in Model)
    {
    <div class="jumbotron pt-4 pb-5 col-lg-3 col-md-6 col-sm-10
               @(e.IsCancelled ? "cancelled" : null) @(!e.IsCancelled && e.WantedAmountOfParticipants <= e.UserEvents.Count ? "full" : null)">
        <div class="container-fluid">
            <a asp-controller="Events" asp-action="EventDetails" asp-route-id="@e.Id" class="text-decoration-none d-block">
                <partial name="Partials/_EventBasicDetails" model="e" />
            </a>
            <partial name="Partials/_ActionButtons" model="e" />
        </div>
    </div>
    }
</div>
<div>
    @if (User.IsInRole("Super"))
    {
        <a class="round-button btn-primary text-decoration-none" asp-action="AddEvent"><i class="fa fa-plus fa-3x"></i></a>
    }
</div>
