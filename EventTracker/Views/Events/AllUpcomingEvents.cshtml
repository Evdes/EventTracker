@model IEnumerable<EventTracker.Models.Event>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllUpcomingEvents</title>
</head>
<body>
    <h1>All upcoming events</h1>
    <table>
        @foreach (var e in Model){
        <tr>
            <td>@e.Name</td>
            <td>@e.Description</td>
            <td>@e.WantedAmountOfParticipants</td>
            <td>@e.Location.City</td>
            <td>@e.Location.Province</td>
            <td>
                <a asp-action="EventDetails" asp-route-id="@e.Id">Details</a>
                <a asp-action="EditEvent" asp-route-id="@e.Id">Edit</a>
                <a asp-action="DeleteEvent" asp-route-id="@e.Id">Delete</a>
            </td>
        </tr>
    }
    </table>
    <a asp-action="AddEvent">Add new event</a>
</body>
</html>
