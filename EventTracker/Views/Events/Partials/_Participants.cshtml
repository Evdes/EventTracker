@model Event


<div>
    <h4>Participants:</h4>
    <div>
        @if (Model.UserEvents.Count == 0)
        {
            <h5>There are currently no participants for this event</h5>
        }
        else
        {
            <ul class="list-unstyled">
                @foreach (var userEvent in @Model.UserEvents)
                {
                    <li class="participantRow">
                        <div class="row">
                            <h5>@userEvent.UserProfile.FirstName @userEvent.UserProfile.LastName</h5>
                            @if (ViewBag.Page == "EditEvent")
                            {
                                <button class="btn-delete-sm btn btn-danger form-control" type="button"><i class="fa fa-remove"></i></button>
                            }
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</div>
