@model Event
<!-- The Modal -->
<div class="modal fade" id="ParticipantsModal_@Model.Id">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Participants</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <partial name="Partials/_Participants" model="Model" />
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Return</button>
            </div>
        </div>
    </div>
</div>