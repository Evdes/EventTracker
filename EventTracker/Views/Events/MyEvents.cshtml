@model IEnumerable<Event>
@{
    ViewBag.Title = "My events";
}

<div class="col">
    @foreach (var e in Model)
    {
        <div class="jumbotron pt-4 pb-4 col-lg-4 col-md-9 col-sm-10
               @(e.IsCancelled ? "cancelled" : null) @(!e.IsCancelled && e.WantedAmountOfParticipants <= e.UserEvents.Count ? "full" : null)">
            <div class="container-fluid">
                <partial name="Partials/_EventDetails" model="e" />
                <br />
                <partial name="Partials/_Participants" model="e" />
            </div>
        </div>
    }
</div>