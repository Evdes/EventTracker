@model IEnumerable<Event>
@{
    ViewBag.Title = "My events";
}

<div class="col">
    @foreach (var e in Model)
    {
        <div class="jumbotron pt-4 pb-5 col-lg-3 col-md-8 col-sm-10
               @(e.IsCancelled ? "cancelled" : null) @(!e.IsCancelled && e.WantedAmountOfParticipants <= e.UserEvents.Count ? "full" : null)">
            <div class="container-fluid">
                    <partial name="Partials/_EventBasicDetails" model="e" />
            </div>
        </div>
    }
</div>